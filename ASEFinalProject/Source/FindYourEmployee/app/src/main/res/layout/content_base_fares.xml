    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$"
        android:id="@+id/textView28"
        android:textColor="#000000"
        android:layout_below="@+id/SubCategory2"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="25dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/SubCategoryFare3"
        android:layout_marginBottom="-7dp"
        android:layout_alignBottom="@+id/textView28"
        android:layout_toRightOf="@+id/textView28"
        android:layout_toEndOf="@+id/textView28" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$"
        android:id="@+id/textView29"
        android:textColor="#000000"
        android:layout_marginLeft="170dp"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/SubCategory3"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/SubCategoryFare4"
        android:layout_marginBottom="-7dp"
        android:layout_alignBottom="@+id/textView29"
        android:layout_toRightOf="@+id/textView29"
        android:layout_toEndOf="@+id/textView29" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:id="@+id/imageView14"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fyelogo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/BaseFareContent_RegisterButton"
        android:layout_marginTop="36dp"
        android:background="#c0392b"
        android:textColor="#ffffff"
        android:layout_below="@+id/SubCategoryFareMinimum"
        android:layout_centerHorizontal="true"
        android:onClick="Register" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView15"
        android:layout_toRightOf="@+id/BaseFareContent_RegisterButton"
        android:layout_toEndOf="@+id/BaseFareContent_RegisterButton"
        android:src="@drawable/employee"
        android:layout_below="@+id/SubCategoryFareMinimum" />

</RelativeLayout>
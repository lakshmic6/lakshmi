        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Team Lead"
        android:id="@+id/SubCategory3"
        android:layout_below="@+id/SubCategory2"
        android:layout_marginTop="25dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Support Member"
        android:id="@+id/SubCategory4"
        android:layout_below="@+id/SubCategory3"
        android:layout_marginTop="25dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Minimum Base Fire"
        android:id="@+id/Minimum"
        android:layout_below="@+id/SubCategory4"
        android:layout_marginTop="25dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$"
        android:id="@+id/textView22"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="120dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="for any work:"
        android:id="@+id/textView24"
        android:layout_below="@+id/Minimum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$"
        android:id="@+id/textView26"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/Minimum"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/Minimum"
        android:layout_toEndOf="@+id/Minimum" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/SubCategoryFareMinimum"
        android:layout_marginTop="316dp"
        android:layout_toRightOf="@+id/textView26"
        android:layout_toEndOf="@+id/textView26" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.findyourtechnician.Home"
    android:background="@drawable/bgimage1">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/Location_Search"
        android:hint="Enter zipcode to search" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="375dp"
        android:layout_marginTop="150dp"
        android:id="@+id/Technicians_List"
        android:layout_weight="1" />
    <Button
        android:layout_marginLeft="120dp"
        android:layout_marginTop="1dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Edit profile"
        android:background="#c03622"
        android:id="@+id/Home_EditProfileButton"
        android:onClick="EditProfile" />
    <ImageView
        android:src="@drawable/fyelogo"
        android:layout_width="80dp"
        android:layout_height="50dp" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="sign Out"
        android:id="@+id/ContentHome_SignOutButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#c03622"
        android:onClick="SignOut" />


</RelativeLayout>